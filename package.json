{
  "name": "test",
  "displayName": "test",
  "description": "A VS Code extension to check .txt files using textlint and prh rules.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onCommand:test.helloWorld",
    "onCommand:test.textlintCheckTxt",
    "onLanguage:plaintext"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "test.helloWorld",
      "title": "Hello World"
    },
    {
      "command": "test.textlintCheckTxt",
      "title": "Textlint: 检查当前TXT文件"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "textlint": "textlint --config ./textlint.config.js \"**/*.txt\""
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "textlint": "^13.3.0",
    "textlint-rule-prh": "^6.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
